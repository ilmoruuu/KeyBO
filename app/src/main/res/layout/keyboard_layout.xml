<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#9999A0"
    android:orientation="vertical">

    <!-- Primeira linha de letras -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_q" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_q" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_w" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_w" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_e" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_e" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_r" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_r" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_t" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_t" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_y" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_y" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_u" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_u" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_i" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_i" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_o" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_o" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_p" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_p" tools:ignore="ButtonStyle"/>
    </LinearLayout>

    <!-- Segunda linha de letras -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/key_a" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_a" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_s" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_s" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_d" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_d" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_f" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_f" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_g" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_g" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_h" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_h" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_j" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_j" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_k" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_k" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_l" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_l" tools:ignore="ButtonStyle"/>
    </LinearLayout>

    <!-- Terceira linha de letras -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/shift" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/shift" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_z" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_z" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_x" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_x" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_c" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_c" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_v" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_v" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_b" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_b" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_n" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_n" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/key_m" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/key_m" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/delete" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/delete" tools:ignore="ButtonStyle"/>
    </LinearLayout>

    <!-- Quatro linha de letras -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/numeros" android:layout_width="10dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/numeros" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/virgula" android:layout_width="10dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/virgula" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/space" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_weight="1" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/ponto" android:layout_width="10dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/ponto" tools:ignore="ButtonStyle"/>
        <Button android:id="@+id/done" android:layout_width="10dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/done" tools:ignore="ButtonStyle"/>

    </LinearLayout>

</LinearLayout>
